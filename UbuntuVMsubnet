# Configure the Azure provider
terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0.2"
    }
  }

  required_version = ">= 1.1.0"
}

provider "azurerm" {
  features {}
}

#Configure the Resource Group
resource "azurerm_resource_group" "rg" {
  name     = "example-rg"
  location = "East US"

tags = {
    Environment = "Terraform Getting Started"
    Team = "Devops"
}
}

